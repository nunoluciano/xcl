# editorconfig.org
# This file is for unifying the coding style for different editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[**.css]
indent_style = space
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[**.html]
indent_style = space
indent_size = 4

[**.js]
indent_style = space
indent_size = 4

# Tabs in less
[**.less]
indent_style = space
indent_size = 4

[**.php]
indent_style = space
indent_size = 4

[{*.scss,*.css}]
indent_size = 4

[*.txt]
indent_style = space
indent_size = 4

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[{*.yml,*.yaml,package.json}]
indent_style = space
indent_size = 2
